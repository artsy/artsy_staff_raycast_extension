{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "artsy-staff",
  "title": "Artsy Staff",
  "description": "Extension for Artsy Staff.",
  "icon": "extension-icon.png",
  "author": "jonallured",
  "license": "MIT",
  "commands": [
    {
      "description": "List of Artsy Projects.",
      "mode": "view",
      "name": "project_list",
      "subtitle": "List of Artsy Projects",
      "title": "Artsy Projects"
    },
    {
      "description": "Quick Access to Artsy Projects.",
      "mode": "view",
      "name": "quick_access",
      "subtitle": "Quick Access to Artsy Projects",
      "title": "Artsy Projects - Quick Access"
    }
  ],
  "preferences": [
    {
      "name": "editor",
      "type": "textfield",
      "required": true,
      "title": "Editor",
      "description": "The editor to use for opening repositories.",
      "placeholder": "Enter the name of your editor",
      "default": "com.microsoft.VSCode"
    },
    {
      "name": "project_root_path",
      "type": "textfield",
      "required": true,
      "title": "Artsy Project Root Path",
      "description": "The path to the root of your Artsy projects.",
      "placeholder": "Enter the path to your Artsy projects"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.52.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.5.1",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
